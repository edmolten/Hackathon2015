<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:hint="Email" />

    <EditText
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:id="@+id/user"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_alignEnd="@+id/email"
        android:hint="Nombre completo" />

    <EditText
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:id="@+id/pass"
        android:layout_below="@+id/user"
        android:layout_alignLeft="@+id/user"
        android:layout_alignStart="@+id/user"
        android:layout_alignRight="@+id/user"
        android:layout_alignEnd="@+id/user"
        android:hint="Contraseña"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:id="@+id/pass_confirm"
        android:layout_below="@+id/pass"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignStart="@+id/pass"
        android:layout_alignRight="@+id/pass"
        android:layout_alignEnd="@+id/pass"
        android:hint="Repite contraseña"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/about"
        android:layout_above="@+id/registrar"
        android:layout_alignLeft="@+id/pass_confirm"
        android:layout_alignStart="@+id/pass_confirm"
        android:hint="Acercad e mi"
        android:layout_alignRight="@+id/pass_confirm"
        android:layout_alignEnd="@+id/pass_confirm"
        android:layout_below="@+id/pass_confirm" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar"
        android:id="@+id/registrar"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/pass_confirm"
        android:layout_alignStart="@+id/pass_confirm"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp"
        android:onClick="onRegistrarButtonClick"
        android:nestedScrollingEnabled="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_above="@+id/registrar"
        android:layout_alignRight="@+id/registrar"
        android:layout_alignEnd="@+id/registrar" />

</RelativeLayout>