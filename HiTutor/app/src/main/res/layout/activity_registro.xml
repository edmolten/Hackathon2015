<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:id="@+id/imageView4"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_signup" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:layout_weight="1.11"
        android:weightSum="1">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:hint="Email" />

            <EditText
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:id="@+id/user"
                android:layout_below="@+id/email"
                android:layout_alignLeft="@+id/email"
                android:layout_alignStart="@+id/email"
                android:layout_alignRight="@+id/email"
                android:layout_alignEnd="@+id/email"
                android:hint="Nombre completo" />

            <EditText
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:id="@+id/pass"
                android:layout_below="@+id/user"
                android:layout_alignLeft="@+id/user"
                android:layout_alignStart="@+id/user"
                android:layout_alignRight="@+id/user"
                android:layout_alignEnd="@+id/user"
                android:hint="Contraseña"
                android:inputType="textPassword" />

            <EditText
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:id="@+id/pass_confirm"
                android:layout_below="@+id/pass"
                android:layout_alignLeft="@+id/pass"
                android:layout_alignStart="@+id/pass"
                android:layout_alignRight="@+id/pass"
                android:layout_alignEnd="@+id/pass"
                android:hint="Repite contraseña"
                android:inputType="textPassword" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:weightSum="1">

        <Button
            android:text="Registrar"
            android:id="@+id/registrar"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:background ="#00c6c6"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/pass_confirm"
            android:layout_alignStart="@+id/pass_confirm"
            android:onClick="onRegistrarButtonClick"
            android:nestedScrollingEnabled="false"
            android:layout_weight="0.90" />
    </LinearLayout>

</LinearLayout>