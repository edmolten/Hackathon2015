<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hackathon2015.hitutor.MiPerfil"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Perfil_ImageViewProfile"
        android:src="@mipmap/profile_picture"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/Perfil_TextViewNombre"
        android:layout_weight="0.35" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Perfil_TextViewNombreDB"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/Perfil_TextViewValoracion"
        android:layout_toEndOf="@+id/Perfil_TextViewValoracion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acerca de mi:"
        android:id="@+id/Perfil_TextViewAboutMe"
        android:textSize="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Perfil_TextViewNombre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Perfil_TextViewAboutMeDB"
        android:layout_alignTop="@+id/Perfil_TextViewAboutMe"
        android:layout_above="@+id/Perfil_TextViewValoracion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valoracion:"
        android:id="@+id/Perfil_TextViewValoracion"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:id="@+id/Perfil_RatingBarDB"
        android:layout_below="@+id/Perfil_TextViewAboutMeDB"
        android:layout_alignLeft="@+id/Perfil_TextViewAboutMeDB"
        android:layout_alignStart="@+id/Perfil_TextViewAboutMeDB" />

</LinearLayout>
